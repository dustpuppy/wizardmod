package thewizardmod.pedestral;

import net.minecraft.client.Minecraft;
import net.minecraft.client.renderer.GlStateManager;
import net.minecraft.client.renderer.tileentity.TileEntitySpecialRenderer;
import net.minecraft.entity.item.EntityItem;
import net.minecraft.item.ItemStack;
import net.minecraft.util.EnumFacing;
import thewizardmod.items.StartupCommon;

public class RendererPedestral extends TileEntitySpecialRenderer<TileEntityPedestral>{

	public EntityItem ITEM = new EntityItem(Minecraft.getMinecraft().theWorld, 0, 0, 0, new ItemStack(thewizardmod.Wands.StartupCommon.blazeWand));
	
	
	@Override
	public void renderTileEntityAt(TileEntityPedestral te, double x, double y, double z, float partialTicks, int destroyStage) {
		super.renderTileEntityAt(te, x, y, z, partialTicks, destroyStage);

		TileEntityPedestral tileEntity = (TileEntityPedestral)te;
		if(tileEntity.item != null)
			if(ITEM == null || ITEM.getEntityItem().getItem() != tileEntity.item)
				ITEM = new EntityItem(tileEntity.getWorld(), x, y, z, new ItemStack(tileEntity.item));
		
		if(ITEM != null)
		{
		
			// For items that hover around
			ITEM.hoverStart = 0F;
			float pt = 0F;
//			float pt = partialTicks;

			GlStateManager.pushMatrix();
			{
				GlStateManager.translate(x, y, z);
				GlStateManager.translate(0.5F, 0.9F, 0.85F);
				GlStateManager.scale(1.5F, 1.5F, 1.5F);
//				GlStateManager.rotate(-44, 1.0F, 0.0F, 0.0F);
				tileEntity.lastChangeTime++;
				if (tileEntity.lastChangeTime > 360)
				{
					tileEntity.lastChangeTime = 1;
				}
				GlStateManager.rotate(tileEntity.lastChangeTime, 0.0F, 1.0F, 0.0F);
				if(te.counter == 1)
				{
					Minecraft.getMinecraft().getRenderManager().doRenderEntity(ITEM, 0, 0, 0, 0F, pt, false);
				}
			}
			GlStateManager.popMatrix();
		}
	}
	
}
