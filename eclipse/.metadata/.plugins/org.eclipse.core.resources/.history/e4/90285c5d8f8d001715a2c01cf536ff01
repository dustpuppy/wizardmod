package thewizardmod.Entities;

import net.minecraft.client.model.ModelBase;
import net.minecraft.client.model.ModelBiped;
import net.minecraft.client.model.ModelRenderer;
import net.minecraft.entity.Entity;

/**
 * Kobold - Stephan Kempa
 * Created using Tabula 6.0.0
 */
public class Kobold extends ModelBase {
    public ModelRenderer LeftLeg;
    public ModelRenderer RightLeg;
    public ModelRenderer Body;
    public ModelRenderer Head;
    public ModelRenderer LeftArm;
    public ModelRenderer RightArm;
    public ModelRenderer Hat1;
    public ModelRenderer Hat2;

    public Kobold() {
        this.textureWidth = 64;
        this.textureHeight = 32;
        this.RightLeg = new ModelRenderer(this, 16, 0);
        this.RightLeg.setRotationPoint(-2.2F, 14.9F, 1.9F);
        this.RightLeg.addBox(-2.0F, 0.0F, -1.9F, 4, 9, 4, 0.0F);
        this.LeftArm = new ModelRenderer(this, 50, 0);
        this.LeftArm.setRotationPoint(5.3F, 4.8F, 1.2F);
        this.LeftArm.addBox(-0.9F, 0.0F, 0.0F, 2, 8, 2, 0.0F);
        this.Body = new ModelRenderer(this, 25, 6);
        this.Body.setRotationPoint(0.0F, 4.9F, 1.9F);
        this.Body.addBox(-4.5F, 0.0F, -3.5F, 9, 10, 7, 0.0F);
        this.RightArm = new ModelRenderer(this, 55, 21);
        this.RightArm.setRotationPoint(-5.6F, 4.8F, 1.2F);
        this.RightArm.addBox(-0.9F, 0.0F, 0.0F, 2, 8, 2, 0.0F);
        this.Hat2 = new ModelRenderer(this, 0, 23);
        this.Hat2.setRotationPoint(0.2F, -5.4F, 1.8F);
        this.Hat2.addBox(-2.5F, 0.0F, -2.5F, 5, 4, 5, 0.0F);
        this.Head = new ModelRenderer(this, 0, 13);
        this.Head.setRotationPoint(0.0F, 3.9F, 2.3F);
        this.Head.addBox(-2.9F, -5.1F, -2.9F, 6, 6, 5, 0.0F);
        this.LeftLeg = new ModelRenderer(this, 0, 0);
        this.LeftLeg.setRotationPoint(2.1F, 14.9F, 2.1F);
        this.LeftLeg.addBox(-1.9F, 0.0F, -2.1F, 4, 9, 4, 0.0F);
        this.Hat1 = new ModelRenderer(this, 16, 23);
        this.Hat1.setRotationPoint(0.2F, -1.4F, 1.8F);
        this.Hat1.addBox(-3.5F, 0.0F, -3.0F, 7, 1, 6, 0.0F);
    }

    @Override
    public void render(Entity entity, float f, float f1, float f2, float f3, float f4, float f5) { 
        this.RightLeg.render(f5);
        this.LeftArm.render(f5);
        this.Body.render(f5);
        this.RightArm.render(f5);
        this.Hat2.render(f5);
        this.Head.render(f5);
        this.LeftLeg.render(f5);
        this.Hat1.render(f5);
    }

    /**
     * This is a helper function from Tabula to set the rotation of model parts
     */
    public void setRotateAngle(ModelRenderer modelRenderer, float x, float y, float z) {
        modelRenderer.rotateAngleX = x;
        modelRenderer.rotateAngleY = y;
        modelRenderer.rotateAngleZ = z;
    }
}
