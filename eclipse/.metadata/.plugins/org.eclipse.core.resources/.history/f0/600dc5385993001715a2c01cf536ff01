package thewizardmod.World;

import net.minecraft.init.Blocks;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.tileentity.TileEntityMobSpawner;
import net.minecraft.util.math.BlockPos;
import net.minecraft.world.World;

public class StructureHouse {

	public static void set(World world, int x, int y, int z, String mob)
	{
		for(int i = x - 3; i < x + 3; i++)
		{
			for( int j = z - 3; j < z + 3; j++)
			{
				BlockPos blockpos = new BlockPos(i, y, j);
		        world.setBlockState(blockpos, Blocks.PLANKS.getDefaultState(), 2);
			}
			
		}
	}
}
