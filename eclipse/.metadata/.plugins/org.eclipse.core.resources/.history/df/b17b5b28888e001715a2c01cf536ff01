package thewizardmod.machines;

import net.minecraft.client.renderer.block.model.ModelResourceLocation;
import net.minecraftforge.client.model.ModelLoader;
import thewizardmod.machines.EnumHandler.EnumType;

public class StartupClientOnly
{
  public static void preInitClientOnly()
  {
    // This step is necessary in order to make your block render properly when it is an item (i.e. in the inventory
    //   or in your hand or thrown on the ground).
    // It must be done on client only, and must be done after the block has been created in Common.preinit().
    // In this case, there are four variants of items (one for each colour) that need to be need to be covered.

	    ModelResourceLocation itemModelResourceLocation = new ModelResourceLocation("thewizardmod:machine_frame_basic", "inventory");
	    ModelLoader.setCustomModelResourceLocation(StartupCommon.itemBlockMachineFrame, EnumType.BASIC.getMetadata(), itemModelResourceLocation);

	    itemModelResourceLocation = new ModelResourceLocation("thewizardmod:machine_frame_advanced", "inventory");
	    ModelLoader.setCustomModelResourceLocation(StartupCommon.itemBlockMachineFrame, EnumType.ADVANCED.getMetadata(), itemModelResourceLocation);


	    ModelResourceLocation itemExtractorResourceLocation = new ModelResourceLocation("thewizardmod:extractor_basic", "inventory");
	    ModelLoader.setCustomModelResourceLocation(StartupCommon.itemBlockExtractor, EnumType.BASIC.getMetadata(), itemExtractorResourceLocation);

	    itemExtractorResourceLocation = new ModelResourceLocation("thewizardmod:extractor_advanced", "inventory");
	    ModelLoader.setCustomModelResourceLocation(StartupCommon.itemBlockExtractor, EnumType.ADVANCED.getMetadata(), itemExtractorResourceLocation);


  }

  public static void initClientOnly()
  {
  }

  public static void postInitClientOnly()
  {
  }
}
